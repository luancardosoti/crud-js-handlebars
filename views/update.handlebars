<style>
  .update {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #333;
  }

  .update form {
    width: 90%;
    max-width: 900px;
    margin: 50px 0;

    display: flex;
    flex-direction: column;

    padding: 20px 40px;
    background: #fff;
    box-shadow: 0px 0px 4px #ccc;
  }

  .update form span {
    font-size: 30px;
    font-weight: 700;
  }

  .update form hr {
    background-color: #333;
    margin-top: 20px;
  }

  .update form .block {
    display: flex;
    width: 100%;
    justify-content: center;

    padding-top: 10px;
  }

  .update form .block p {
    width: 40%;
    font-weight: 500;
  }

  .update form .block .data {
    width: 60%;
    display: flex;
    flex-direction: column;
  }

  .update form .block .data input {
    height: 30px;

    background: #f5f5f5;
    border: 1px solid #ccc;
    border-radius: 3px;
    outline: 0;

    padding: 5px 10px;
    margin-bottom: 5px;
  }

  .update form .buttons {
    display: flex;
    justify-content: space-between;
  }

  .update form a.home {
    font-size: 14px;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase; 

    cursor:pointer;
    width: 40%;
    height: 40px;

    display: flex;
    justify-content: center;
    align-items: center;

    margin-top: 15px;

    background: #007bff;
    border: none;
    border-radius: 3px;

    font-weight: bold;  
  }

  .update form button {
    cursor:pointer;
    width: 40%;
    height: 40px;

    margin-top: 15px;
    padding: 10px 15px;

    background: #28a745;
    border: none;
    border-radius: 3px;

    font-weight: bold;
  }

  .update form button a {
    font-size: 14px;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
  }
</style>

<div class="update">
  <form action="/companies/update" method="POST" {{{company}}}>
    <span>Atualize os dados</span>
    <p>Nota: campos como cnpj e cpf não podem ser alterados.</p>

    <hr size="1">
    <div class="block">
      <p>Dados</p>
      <div class="data">
        <input  type="hidden" name="id" id="id" value={{company.id}}>
        <label for="">Nome da Empresa</label>
        <input type="text" name="company_name" id="company_name" value={{company.company_name}}>
      </div>
    </div>

    <hr size="1">
    <div class="block">
      <p>Contato</p>
      <div class="data">
        <label for="">Email</label>
        <input type="email" name="email" id="email" value={{company.email}}>
        <label for="">elefone</label>
        <input type="text" name="telefone" id="telefone" value={{company.telefone}} onkeyup="telMask('(__)_____-____', this)">
      </div>
    </div>

    <hr size="1">
    <div class="block">
      <p>Endereço</p>
      <div class="data">
        <label for="">CEP</label>
        <input type="text" name="cep" id="cep" value={{company.cep}}>
        <label for="">UF</label>
        <input type="text" name="uf" id="uf" value={{company.uf}}>
        <label for="">Cidade</label>
        <input type="text" name="cidade" id="cidade" value={{company.cidade}}>
        <label for="">Bairro</label>
        <input type="text" name="bairro" id="bairro" value={{company.bairro}}>
        <label for="">Logradouro</label>
        <input type="text" name="logradouro" id="logradouro" value={{company.logradouro}}>
        <label for="">Número</label>
        <input type="text" name="numero" id="numero" value={{company.numero}}>
      </div>
    </div>
    <hr size="1">
    <div class="buttons">
      <a class="home" href="/">voltar</a>
      <button type="submit"> <a href="/companies/update">atualizar</a> </button>
    </div>
  </form>
</div>